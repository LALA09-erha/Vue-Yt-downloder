{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/client/$1"
    }
  ],
  "installCommand": "cd client && npm install --prefer-offline --no-audit",
  "buildCommand": "cd client && npm run build:light",
  "outputDirectory": "client/dist",
  "functions": {
    "client/package.json": {
      "maxDuration": 30
    }
  }
}